#!/usr/bin/env bash

GCD_BIN="!!GCDLIBEXECBIN!!"
GCD_BIN="/usr/local/opt/git-cd/libexec/bin"
echo "git-cd - reset metrics"
echo "This action will totally reset the metrics."
read -p "Are you sure? " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
    rm -f ${HOME}/.gcd/gcd.sqlite
    echo
    echo "git-cd - metrics have been reset..."
fi

